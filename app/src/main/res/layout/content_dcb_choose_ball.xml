<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jingtuo.android.lottery.page.dcb.choose.ChooseBallActivity"
    tools:showIn="@layout/activity_dcb_choose_ball">

    <com.jingtuo.android.lottery.common.widget.BallLayout
        android:id="@+id/bl_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dcb_red"
        android:textSize="24sp"
        app:ballBg="@drawable/bg_double_red"
        app:columnSpace="5dp"
        app:count="33"
        app:lineSpace="5dp" />

    <com.jingtuo.android.lottery.common.widget.BallLayout
        android:id="@+id/bl_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/dcb_blue"
        android:textSize="24sp"
        app:ballBg="@drawable/bg_double_blue"
        app:columnSpace="5dp"
        app:count="16"
        app:layout_constraintTop_toBottomOf="@id/bl_red"
        app:lineSpace="5dp" />
</android.support.constraint.ConstraintLayout>
