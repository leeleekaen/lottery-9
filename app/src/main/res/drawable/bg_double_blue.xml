<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="90" android:centerColor="#CF0000FF" android:endColor="#AF0000FF" android:startColor="#EF0000FF" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <gradient android:angle="90" android:centerColor="#AF0000FF" android:endColor="#8F0000FF" android:startColor="#CF0000FF" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="#AF0000FF" />
            <padding />
        </shape>
    </item>
</selector>